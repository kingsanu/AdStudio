{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["esnext", "ES2021.String", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "@emotion/react",

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "canva-editor": ["packages/editor/src"],
      "canva-editor/*": ["packages/editor/src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vite.config.mjs",
    "packages/editor/vite.config.mjs",
    "packages/editor/src/layout/sidebar/TemplateContent.jsx",
    "packages/editor/src/components/editor/SaveTemplate.jsx",
    "packages/editor/src/components/editor/TemplateGallery.jsx"
  ],

  "exclude": [
    "**/node_modules",
    "**/dist",
    "src/components/editor/CustomEditor.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
